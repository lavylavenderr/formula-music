generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  discordId String     @unique
  playlists Playlist[]
}

model Playlist {
  id        Int      @id @unique @default(autoincrement())
  owner     User     @relation(fields: [ownerId], references: [discordId])
  ownerId   String
  title     String
  songs     Song[]
  createdAt DateTime @default(now())
}

model Song {
  id        Int        @id @unique @default(autoincrement())
  title     String
  isrc      String
  spotifyId String
  playlists Playlist[]
  artists   Artist[]
}

model Artist {
  id        Int    @id @unique @default(autoincrement())
  name      String
  songs     Song[]
  spotifyId String
  picture   String
  streams   Int    @default(0)
}
